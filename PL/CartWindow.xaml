<Window x:Class="PL.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">


    <Border Padding="10" Background="#eee">

        <StackPanel>
            <Button x:Name="CompleteOrder" Content="Complete Order"  FontSize="15" FontWeight="Bold" FontStyle="Normal" 
                Background="#FFE7D4F1" Width="120" Height="44"  Margin="0,20,200,0" HorizontalAlignment="Left" Grid.ColumnSpan="2">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button x:Name="ViewCart" Content="View Cart" FontSize="15" FontWeight="Bold" FontStyle="Normal" 
                Background="#FFE7D4F1" Width="120" Height="44" Margin="0,20,200,0" HorizontalAlignment="Left">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>



        </StackPanel>
    </Border>
</Window>
